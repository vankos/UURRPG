<Window x:Class="UURRPG.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UURRPG"
        mc:Ignorable="d"
        Title="Unoriginal Ugly Rouglike RPG" Height="450" Width="800" WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height ="auto"/>
            <RowDefinition Height ="*"/>
            <RowDefinition Height ="225"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="Menu" Background="DimGray" Grid.ColumnSpan="2"/>
        <Label Grid.Row="1" Grid.Column="0" Content="Stats" Background="Black" Foreground="White"/>
        <Label Grid.Row="1" Grid.Column="1" Content="Log" Background="Black" Foreground="White"/>
        <Label Grid.Row="2" Grid.Column="0" Content="Inventory|Journal" Background="LightGoldenrodYellow"/>
        <Label Grid.Row="2" Grid.Column="1" Content="Control" Background="Black" Foreground="White"/>
    </Grid>
</Window>
